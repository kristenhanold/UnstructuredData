# install necessary packages
z <- "@GeorgiaStateU: My two email addresses are smith77@gsu.edu and 
alex.smith@yahoo.com.uk"
my_regex = "[a|s]+[a-z0-9.]*@[a-z]*\\.(edu|com)[a-z.]*"
stringr::str_extract_all(z, my_regex)[[1]]
